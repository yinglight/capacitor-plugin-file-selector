<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="ChooserAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0A95FF</item>
        <item name="colorPrimaryDark">#2865FF</item>
        <item name="colorAccent">#03DAC5</item>
    </style>

    <style name="ChooserAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ChooserAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ChooserAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="BottomButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/bottom_button_bar</item>
    </style>
    <style name="BottomButton" >
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">#cc000000</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#80ffffff</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:shadowDy">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_bottom</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="BottomButton.Left">
    </style>
    <style name="BottomButton.Right">
        <item name="android:background">@drawable/btn_bottom_last</item>
    </style>
</resources>
